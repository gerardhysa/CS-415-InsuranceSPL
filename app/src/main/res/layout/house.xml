<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spouse_surname_field" />

        <EditText
            android:id="@+id/gender_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="Gender"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/spouse_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="305dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="305dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            android:text="Gender:"
            app:layout_constraintBottom_toTopOf="@+id/gender_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surname_field" />

        <EditText
            android:id="@+id/surname_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Enter your Surname"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="65dp"
            android:layout_height="15dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="288dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="288dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:text="Surname:"
            app:layout_constraintBottom_toTopOf="@+id/surname_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_field" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter your Name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="314dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="314dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:text="Name:"
            app:layout_constraintBottom_toTopOf="@+id/name_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/spouse_name"
            android:layout_width="95dp"
            android:layout_height="24dp"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="251dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="251dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"
            android:text="Spouse Name"
            app:layout_constraintBottom_toTopOf="@+id/spouse_name_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_field" />

        <EditText
            android:id="@+id/spouse_name_field"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="34dp"
            android:layout_marginStart="33dp"
            android:ems="10"
            android:hint="Enter Spouse Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spouse_name" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="119dp"
            android:layout_height="21dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="233dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="233dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Spouse Surname:"
            app:layout_constraintBottom_toTopOf="@+id/spouse_surname_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spouse_name_field" />

        <EditText
            android:id="@+id/spouse_surname_field"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="13dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="Enter Spouse Surname"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/submit_button"
            app:layout_constraintEnd_toStartOf="@+id/submit_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spouse_name_field"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>